@using XDAAlarmCreationApp.Model
@using GSF.Web.Model
@using GSF.Web
@using XDAAlarmCreationApp


@inherits ExtendedTemplateBase<AppModel>
@{
    DataContext dataContext = ViewBag.DataContext;

    Layout = "Layout.cshtml";
    string title = ViewBag.CustomTitle = "Color Gradient";
    // Define column headers, use null for field name to make column non-sortable
    ViewBag.HeaderColumns = new[]
    {   //    { "Field", "Label", "Classes" }
        new[] { "Name", "Name", "text-Left" },
        new[] { "RangeValue", "Range", "text-Left" },
        new[] { "LoadOrder", "Load Order", "text-Left" },
        new[] { "HexColor", "HexColor", "text-Left" }
    };

    ViewBag.AddNewEditTitle = "Color";
    ViewBag.BodyRows = BodyRows().ToString();
    ViewBag.AddNewEditDialog = AddNewEditDialog(dataContext).ToString();
    ViewBag.ShowSearchFilter = true;

    ViewBag.BreadCrumbText = "Color Gradients";

}
@helper BodyRows()
{
    <td width="65%" class="text-left valign-middle" nowrap><button type="button" class="btn btn-link" data-bind="text: Name, click: $parent.viewPageRecord"></button></td>
    <td width="10%" class="text-left valign-middle" data-bind="text: RangeValue"></td>
    <td width="5%" class="text-left valign-middle" data-bind="text: LoadOrder"></td>
    <td width="5%" class="text-left valign-middle" data-bind="text: HexColor, style: {'background-color': '#' + HexColor}"></td>
    <td width="5%" class="text-center valign-middle" nowrap>
        <button type="button" class="btn btn-xs" data-bind="click: $parent.editPageRecord, enable: $parent.dataHubIsConnected()"><span class="glyphicon glyphicon-pencil"></span></button>
        <button type="button" class="btn btn-xs" data-bind="click: $parent.removePageRecord, enable: $parent.canDelete() && $parent.dataHubIsConnected()"><span class="glyphicon glyphicon-remove"></span></button>
    </td>
}
@helper AddNewEditDialog(DataContext dataContext)
{
    @Raw(dataContext.AddInputField<ColorGradients>("Name"))
    @Raw(dataContext.AddInputField<ColorGradients>("RangeValue"))
    @Raw(dataContext.AddInputField<ColorGradients>("HexColor"))
    @Raw(dataContext.AddInputField<ColorGradients>("LoadOrder"))

}
@Html.RenderResource("GSF.Web.Model.Views.PagedViewModel.cshtml")
@section Scripts{
    <script>
        @Raw(dataContext.RenderViewModelConfiguration<ColorGradients, DataHub>(ViewBag, "LoadOrder"))
        $('#crumbs').append('<a style="color: #020c6f" href="/Settings.cshtml" >Settings</a> &gt;')

        $(function () {

        });

        $("#addNewEditDialog").on("shown.bs.modal", function () {
            document.getElementById('inputHexColor')
            var picker = new jscolor(document.getElementById('inputHexColor'), { zIndex: 2000 })
        });
            
    </script>
}