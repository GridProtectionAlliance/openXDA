@using System
@using System.Threading
@using RazorEngine.Templating
@using GSF.Web
@using GSF.Web.Model
@using openXDA.Model
@using openXDA.Hubs

@inherits ExtendedTemplateBase<AppModel>
@{
    Layout = "Config/Layout.cshtml";
    ViewBag.Title = "Help";
    string pdfLink = "/Docs/openXDAsettings.pdf";
}
<embed id="pdfContent" src="/Docs/openXDAsettings.pdf" width="100%" height="200">
@section StyleSheets {
    <style>
        body {
            overflow-y: hidden;
        }
    </style>
}

@section Scripts {
    <script>

        $('#bodyContainer').removeClass('container');

        function resizePDFContent() {
            $("#pdfContent").attr("height", (calculateRemainingBodyHeight() + 56) + "px");
        }

        $(window).resize(function () {
            resizePDFContent();
        });

        $(function () {
            setTimeout(resizePDFContent, 50);
        });

    </script>
}
