@using System
@using System.Threading
@using RazorEngine.Templating
@using GSF.Web
@using openXDA.Model
@using RazorEngine.Templating
@using openXDA.Hubs

@inherits TemplateBase<AppModel>
@{
    Layout = "Workbench/Layout.cshtml";
    ViewBag.Title = "Help";
    string pdfLink = "/Docs/openXDAsettings.pdf";
}
<embed id="pdfContent" src="/Docs/openXDAsettings.pdf" width="100%" height="200">
@section Scripts {
    <script>
        function resizePDFContent() {
            $("#pdfContent").attr("height", (calculateRemainingBodyHeight() + 40) + "px");
        }

        $(window).resize(function () {
            resizePDFContent();
        });

        $(function () {
            setTimeout(resizePDFContent, 50);
        });

    </script>
}
